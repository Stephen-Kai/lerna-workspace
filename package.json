{
  "name": "lerna-workspace",
  "version": "1.0.0",
  "description": "my sample lerna workspace",
  "main": "index.js",
  "repository": "git@github.com:samuraitruong/lerna-workspace.git",
  "author": "Truong Nguyen <tnguyen@demystdata.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "echo test && exit 0",
    "release": "HUSKY_BYPASS=true lerna publish"
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "lerna": "^3.22.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4"
  }
}
